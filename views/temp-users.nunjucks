<html>
	<head>
    <link href='https://fonts.googleapis.com/css?family=Arimo:400,700|Source+Sans+Pro' rel='stylesheet' type='text/css'>
    <script src="/js/jquery.min.js"></script>
    <style>
      body, html {
      	margin: 0;
      	padding: 0;
      	font-family: 'Arimo', sans-serif;
      }

      #container {
      	padding: 50px 0;
      	display: flex;
      	flex-flow: row wrap;
      	justify-content: center;
      	align-items: center;
      }

      .card {
      	width: 250px;
      	height: 350px;
      	margin: 20px;
      	border-radius: 5px;
      	background-color: #ecf0f1;
      	box-shadow: 0px 0px 20px 0px rgba(50, 50, 50, 0.3);
      	overflow: hidden;
      	transition: height 0.3s ease-out;
      }

      .top {
      	height: 200px;
      	background-color: #1abc9c;
      }

      .middle {
      	height: 150px;
      	background-color: #34495e;
      	overflow: scroll;
      }

      .middle p {
      	width: 90%;
      	margin: 0 10% ;
      	padding: 0.5em;
      	padding-left: 0.7em;
      	font-family: 'Source Sans Pro', sans-serif;
      	font-size: 0.9em;
      	text-align: left;
      	color: #bdc3c7;
      	border-left: 1px solid white;
      }

      .bottom {
      	display: flex;
      	flex-flow: row no-wrap;
      	align-items: center;
      	justify-content: center;
      	height: 100px;
      	background-color: #e74c3c;
      	overflow: scroll;
      }

      .topics {
      	width: 90%;
      	height: 100px;
      	margin: 0;
      	background-color: #bdc3c7;
      	overflow: scroll;
      }

      .topics table {
      	width: 100%;
      	border-spacing: 0px;
      }

      .topics table th {
      	padding: 0.5em;
      	padding-left: 1.1em;
      	text-align: justify;
      	font-size: 1.1em;
      	border-bottom: 1px solid rgba(30, 30, 30, 0.3);
      }

      .topics table td {
      	padding: 0.7em 0.5em;
      	padding-left: 1.6em;
      	text-align: justify;
      	font-size: 0.8em;
      }

      .topics table thead {
      	border-bottom: 1px solid black;
      }

      .links {
      	width: 10%;
      	height: 100px;
      	margin: 0;
      	background-color: #27ae60;
      	overflow: scroll;
      }

      .show-more {
      	height: 450px;
      }
    </style>
	</head>
	<body data-loggedInUsername="{{ loggedInUser }}">
		<div id="container">
			{% for user in users %}
			<div class="card">
				<div class="top">
					<button class="requestSession" id="{{ user.username }}">
						Connect
					</button>
					<span class="{{ user.available }}">
					</span>
				</div>
				<div class="middle">
					<h4>Bio</h4>
					<p>
						{{user.bio}}
					</p>
				</div>
				<div class="bottom">
				</div>
			</div>
			{% endfor %}
		</div>
    <script>
      $(document).ready(function() {
        $(".card").on("click", function() {
  	     $(this).toggleClass('show-more');
        });
      });
    </script>
		<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
		<script src="/js/custom/usersSocket.js"></script>
	</body>
</html>
